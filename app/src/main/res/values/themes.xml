<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubCatalog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/queen_blue</item>
        <item name="colorPrimaryVariant">@color/pale_spring</item>
        <item name="colorOnPrimary">@color/eton_blue</item>
        <item name = "colorPrimaryContainer"> @color/queen_blue </item>

        <item name = "colorSecondaryContainer"> @color/colorPrimary </item>
        
        <item name = "civ_border_color"> @color/pale_spring </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/queen_blue</item>

        <!-- Bottom Nav Background. -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>
    </style>

    <style name="MyBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/polished_pine</item>
    </style>
</resources>
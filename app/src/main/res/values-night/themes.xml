<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubCatalog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/bottomNavIconColor</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryContainer"> @color/colorPrimary </item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation Bottom color. -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>
    </style>

    <style name="MyBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottomNavBackground</item>
    </style>
</resources>